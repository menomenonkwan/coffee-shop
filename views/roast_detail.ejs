<% layout('layout') -%>

<div class="container">
  <h1><%= title %></h1>
  <div class="banner">
    <ul class="list">
      <% if (roast_coffees.length > 0) { %>
      <% roast_coffees.forEach(coffees => { %>
        <li><a href=<%= coffees.url %>><%= coffees.name %></a></li>
      <% }) %>
      <% } else { %>
        <li>We are currently have no coffee in <%= title %>. Sorry!!!</li>
      <% } %>
    </ul>
  </div>
  
</div>